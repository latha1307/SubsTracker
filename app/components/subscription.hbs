<div class="sub-container">
    <div class="sub-header">
        <h3>Subscriptions</h3>
        <button type="button">
            <LinkTo @route="addSubscription" style="text-decoration: none;color: white;">
                Add new subscription
            </LinkTo>
        </button>
    </div>
    <div class="status">
        <div class="status-card">
            <div class="inside-1">
                <div>
                    <p>Amount spent</p>
                    <h3>$ {{this.amountSpent}}</h3>
                </div>
            <span>This Month</span>
            </div>
            <div class="inside-2">
                <div>
                    <p>Count</p>
                    <h4>{{this.activeSubCount}}</h4>
                </div>
                <span>Active</span>
            </div>
        </div>
        <div class="status-card">
            <div class="inside-1">
                <div style="color: green;">
                    <p>Amount saved</p>
                    <h3>$ {{this.amountSaved}}</h3>
                </div>
            <span>This Month</span>
            </div>
            <div class="inside-2">
                <div>
                    <p>Count</p>
                    <h4>{{this.inActiveSubCount}}</h4>
                </div>
                <span style="color: green;">Inactive</span>
            </div>
        </div>
    </div>
    <div class="wallet-nav-container-subscription">
        <div class="wallet-nav-selected" {{on 'click' (fn this.currentStatus 'All')}} >
                {{#if (eq this.subscription.subscriptionStatus 'All')}}
                    <h4 style="background-color: rgb(213, 235, 253);">All</h4>
                {{else}}
                    <h4>All</h4>
                {{/if}}
                
            </div>
            <div class="wallet-nav-selected" {{on 'click' (fn this.currentStatus 'Active')}} >
                {{#if (eq this.subscription.subscriptionStatus 'Active')}}
                    <h4 style="background-color: rgb(213, 235, 253);">Active</h4>
                {{else}}
                    <h4>Active</h4>
                {{/if}}
                
            </div>
            <div class="wallet-nav-selected" {{on 'click' (fn this.currentStatus 'Inactive')}}>
                {{#if (eq this.subscription.subscriptionStatus 'Inactive')}}
                    <h4 style="background-color: rgb(213, 235, 253);">Inactive</h4>
                {{else}}
                    <h4>Inactive</h4>
                {{/if}}
            </div>
        </div>

    <div class="overall-sub-cards">
        {{#each (reverse-array this.subscription.subscriptionArray this.subscription.subscriptionStatus) as |item|}}
            <div class="sub-card">
                <div class="card-img">
                    {{#if item.imgPath}}
                            <img src={{item.imgPath}} alt="">
                        {{else}}
                            <img src='assets/images/star.png' alt="">
                        {{/if}}
                    <h3>{{item.subName}}</h3>
                </div>
                <div class="card-content">
                    <div>
                        <p style="color: gray;">Status: 
                            {{#if item.isActive}}
                                <span style="color: rgb(199, 0, 0);"> {{item.status}}</span>
                            {{else}}
                                <span style="color: green;"> {{item.status}}</span>
                            {{/if}}
                               
                            </p>
                        <p style="color: gray;">Plan: <span style="color: black;">{{item.plan}}</span></p>
                    </div>
                    <LinkTo @route="view-subscription" style="text-decoration: none;color:black;" @model={{item.id}}><i class="fa fa-long-arrow-right" aria-hidden="true"></i></LinkTo>
                </div>
            </div>
        {{/each}}
    </div>
</div>